#!/bin/bash
#
# Quick access to config files so I don't have to remember where they all live

while getopts ":h" option; do
 case $option in
  h)
    echo 'bashrc'
    echo 'bash_profile'
    echo 'awesome'    
    echo 'kitty'
    echo 'vifm'
    echo 'vim'
    echo 'rofi'
    echo 'neofetch'
    echo 'neovim'
    echo 'ranger'
    echo 'rifle'
    echo 'zathura'
    echo 'starship'
    echo 'qtile'
    exit 0;;
 esac
done

case $1 in
  bashrc)
    $EDITOR ~/.bashrc
    ;;
  bash_profile)
    $EDITOR ~/.bash_profile
    ;;
  awesome)
    $EDITOR ~/.config/awesome/rc.lua
    ;;
  kitty)
    $EDITOR ~/.config/kitty/kitty.conf
    ;;
  vifm)
    $EDITOR ~/.config/vifm/vifmrc
    ;;
  vim)
    $EDITOR ~/.vimrc
    ;;
  rofi)
    $EDITOR ~/.config/rofi/config.rasi
    ;;
  neofetch)
    $EDITOR ~/.config/neofetch/config.conf
    ;;
  neovim)
    $EDITOR ~/.config/nvim/init.vim
    ;;
  ranger)
    $EDITOR ~/.config/ranger/rc.conf
    ;;
  rifle)
    $EDITOR ~/.config/ranger/rifle.conf
    ;;
  zathura)
    $EDITOR ~/.config/zathura/zathurarc
    ;;
  starship)
    $EDITOR ~/.config/starship.toml
    ;;
  qtile)
    $EDITOR ~/.config/qtile/config.py
    ;;
esac

