#!/bin/bash
#
# Quick access to config files so I don't have to remember where they all live

while getopts ":h" option; do
 case $option in
  h)
    echo 'bashrc'
    echo 'bash_profile'
    echo 'awesome'    
    echo 'kitty'
    echo 'vifm'
    echo 'vim'
    echo 'rofi'
    echo 'neofetch'
    echo 'neovim'
    echo 'ranger'
    echo 'rifle'
    echo 'zathura'
    exit 0;;
 esac
done

case $1 in
  bashrc)
    nvim ~/.bashrc
    ;;
  bash_profile)
    nvim ~/.bash_profile
    ;;
  awesome)
    nvim ~/.config/awesome/rc.lua
    ;;
  kitty)
    nvim ~/.config/kitty/kitty.conf
    ;;
  vifm)
    nvim ~/.config/vifm/vifmrc
    ;;
  vim)
    nvim ~/.vimrc
    ;;
  rofi)
    nvim ~/.config/rofi/config.rasi
    ;;
  neofetch)
    nvim ~/.config/neofetch/config.conf
    ;;
  neovim)
    nvim ~/.config/nvim/init.vim
    ;;
  ranger)
    nvim ~/.config/ranger/rc.conf
    ;;
  rifle)
    nvim ~/.config/ranger/rifle.conf
    ;;
  zathura)
    nvim ~/.config/zathura/zathurarc
    ;;
esac

